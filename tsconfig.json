{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": true,
    "newLine": "lf",
    "paths": {
      "@src/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@config/*": ["src/shared/configs/*"],
      "@errors": ["src/shared/errors"],
      "@types/*": ["src/shared/types/*"],
      "@libs/*": ["src/shared/*"],
      "@interfaces/*": ["src/interfaces/*"]
    }
  }
}
